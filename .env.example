# ========================================
# Supabase Configuration
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# Paddle Configuration
# ========================================
PADDLE_VENDOR_ID=your_paddle_vendor_id
PADDLE_VENDOR_AUTH_CODE=your_paddle_vendor_auth_code
PADDLE_PUBLIC_KEY=your_paddle_public_key
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret

# ========================================
# Application Configuration
# ========================================
# For local development
NEXTAUTH_URL=http://localhost:3000
# For Cloudflare Pages production, set this to your deployment URL:
# NEXTAUTH_URL=https://your-app.pages.dev

NEXTAUTH_SECRET=your_nextauth_secret
JWT_SECRET=your_jwt_secret

# ========================================
# Admin Configuration
# ========================================
ADMIN_EMAIL=admin@yourdomain.com

# ========================================
# Environment
# ========================================
NODE_ENV=development

# ========================================
# CLOUDFLARE PAGES DEPLOYMENT NOTES
# ========================================
# When deploying to Cloudflare Pages:
# 1. Set all these environment variables in the Cloudflare Pages dashboard
# 2. Go to: Settings > Environment Variables
# 3. Add variables for both Production and Preview environments
# 4. DO NOT commit .env.local or .env files to git
# 5. Update NEXTAUTH_URL to your actual Cloudflare Pages URL
# 6. Ensure nodejs_compat flag is enabled (configured in wrangler.toml)