{
  "name": "chrome-extension-backend",
  "version": "1.0.0",
  "description": "Backend for Chrome extension with Supabase and Paddle integration",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "build:worker": "npx @opennextjs/cloudflare",
    "dev:worker": "wrangler dev --port 8771",
    "preview:worker": "npm run build && npm run build:worker && npm run dev:worker",
    "deploy": "npm run build && npm run build:worker && wrangler deploy",
    "pages:deploy": "npm run build && npm run build:worker && wrangler pages deploy",
    "wrangler:types": "wrangler types --env-interface CloudflareEnv"
  },
  "keywords": [
    "chrome-extension",
    "supabase",
    "paddle",
    "payments"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/auth-helpers-react": "^0.4.2",
    "@supabase/supabase-js": "^2.38.5",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "next": "^14.0.4",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.10.1",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "typescript": "^5.3.3",
    "wrangler": "^4.43.0"
  }
}
